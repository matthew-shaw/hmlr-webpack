{
  "name": "hmlr-webpack",
  "version": "1.0.0",
  "description": "HM Land Registry Frontend with Webpack",
  "private": true,
  "scripts": {
    "format:check": "prettier src --check",
    "format:fix": "prettier src --write",
    "lint:check": "eslint src",
    "lint:fix": "eslint src --fix",
    "prebuild": "npm run format:check && npm run lint:check",
    "build": "webpack",
    "watch": "webpack --watch",
    "start": "webpack serve --open",
    "upgrade:latest": "ncu -u",
    "upgrade:minor": "ncu -t minor -u",
    "upgrade:patch": "ncu -t patch -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthew-shaw/hmlr-webpack.git"
  },
  "author": {
    "name": "Matt Shaw",
    "url": "https://matthew-shaw.github.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthew-shaw/hmlr-webpack/issues"
  },
  "homepage": "https://github.com/matthew-shaw/hmlr-webpack#readme",
  "dependencies": {
    "govuk-frontend": "5.11.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.34.0",
    "babel-loader": "^10.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.4",
    "mini-css-extract-plugin": "^2.9.4",
    "npm-check-updates": "^18.0.3",
    "postcss-loader": "^8.2.0",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "purgecss-webpack-plugin": "^7.0.2",
    "sass": "^1.92.0",
    "sass-loader": "^16.0.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
